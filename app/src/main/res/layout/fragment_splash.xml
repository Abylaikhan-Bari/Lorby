<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Name at the top -->
    <TextView
        android:id="@+id/textViewSplashTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/my_custom_font" />

    <!-- App Slogan just below the App Name -->
    <TextView
        android:id="@+id/textViewSplashSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSplashTitle"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/splash_subtitle"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/my_custom_font" />

    <!-- Image centered on the screen below the text -->
    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/textViewSplashSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/splash_image_description"
        android:src="@drawable/splash_image" />

</RelativeLayout>
